{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
		"no-useless-constructor": "off",
		"no-unused-vars": "off",
		"no-empty-function": "off",
		"camelcase": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "routes": "never"
      }
    ],
    "import/prefer-default-export" : "off",
    "quotes": [
      "error",
      "double"
    ],
    "quote-props": [
      "error",
      "consistent-as-needed"
    ],
		"prefer-destructuring": [
			"error",
			{
				"array": true,
				"object": true
			},
			{
				"enforceForRenamedProperties": false
			}
		],
    "import/no-unresolved": "off",
    "consistent-return": "off",
    // "no-tabs": "off",
    // "indent": "off",
		"semi": [
			"error",
			"always"
		],
    "comma-dangle": [
      "error",
      {
        "arrays": "ignore",
        "objects": "ignore",
        "imports": "ignore",
        "exports": "ignore",
        "functions": "ignore"
      }
    ],
		"no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
